@model RockstarsIT.Models.Podcast

@{
    ViewData["Title"] = "Details";
}

<h1>PODCAST DETAILS</h1>

<div>
    <h4>Podcast</h4>
    <hr />
    <dl class="row">
        <dd class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Titel)
        </dd>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titel)
        </dd>
        <dd class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Omschrijving)
        </dd>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Omschrijving)
        </dd>
        <dd class = "col-sm-2">
            @Html.DisplayNameFor(model => model.URL)
        </dd>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.URL)
        </dd>
        <dd class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Auteur)
        </dd>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Auteur.RockstarId)
        </dd>
        <dd class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tribe)
        </dd>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tribe.TribeId)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.PodcastId" class="btn button mr-3">
        BEWERKEN
        <svg class="arrowsSvg" xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24">
            <path d="M0 0h24v24H0z" fill="none" />
            <path d="M4 18l8.5-6L4 6v12zm9-12v12l8.5-6L13 6z" />
        </svg>
    </a>
    <a asp-action="Index" class="btn button-cancel mr-3">
        TERUG NAAR OVERZICHT
        <svg class="arrowsSvg-cancel" xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24">
            <path d="M0 0h24v24H0z" fill="none" />
            <path d="M4 18l8.5-6L4 6v12zm9-12v12l8.5-6L13 6z" />
        </svg>
    </a>
        @if(@Model.PublishedStatus)
        {
         <a asp-action="ChangeStatus" asp-route-id="@Model.PodcastId" asp-route-status="false" class="btn button">
                Depubliceren
                <svg class="arrowsSvg" xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24">
                    <path d="M0 0h24v24H0z" fill="none" />
                    <path d="M4 18l8.5-6L4 6v12zm9-12v12l8.5-6L13 6z" />
                </svg>
            </a>
        }
        else
        {
            <a asp-action="ChangeStatus" asp-route-id="@Model.PodcastId" asp-route-status="true" class="btn button">
                Publiceren
                <svg class="arrowsSvg" xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24">
                    <path d="M0 0h24v24H0z" fill="none" />
                    <path d="M4 18l8.5-6L4 6v12zm9-12v12l8.5-6L13 6z" />
                </svg>
            </a>
        }
</div>
