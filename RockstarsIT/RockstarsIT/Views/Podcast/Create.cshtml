@model RockstarsIT.Models.Podcast

@{
    ViewData["Title"] = "Podcast toevoegen";
}

<h1>PODCAST TOEVOEGEN</h1>

<h4>Podcast</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row g-3">
        <div class="col-md-6 mb-3">
                <label asp-for="Titel" class="control-label"></label>
                <input asp-for="Titel" class="form-control" />
                <span asp-validation-for="Titel" class="text-danger"></span>
            </div>
        <div class="col-md-6 mb-3">
                <label asp-for="Omschrijving" class="control-label"></label>
                <input asp-for="Omschrijving" class="form-control" />
                <span asp-validation-for="Omschrijving" class="text-danger"></span>
            </div>
        <div class="col-md-6 mb-3">
                <label asp-for="URL" class="control-label"></label>
                <input asp-for="URL" class="form-control" />
                <span asp-validation-for="URL" class="text-danger"></span>
            </div>
        <div class="col-md-6 mb-3">
            <label asp-for="Auteur" class="control-label">Auteur</label>
            <select asp-for="RockstarId" class ="form-control" asp-items="ViewBag.RockstarNames"></select>
            <span asp-validation-for="RockstarId" class="text-danger"></span>
            </div>
        <div class="col-md-6 mb-3">
            <label asp-for="Tribe" class="control-label">Tribe</label>
            <select asp-for="TribeId" class ="form-control" asp-items="ViewBag.TribeNames"></select>
            <span asp-validation-for="TribeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
    <div class="row">
        <div class="col-md-6">
            <button class="btn button" type="submit">
                PODCAST TOEVOEGEN
                <svg class="arrowsSvg" xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24">
                    <path d="M0 0h24v24H0z" fill="none" />
                    <path d="M4 18l8.5-6L4 6v12zm9-12v12l8.5-6L13 6z" />
                </svg>
            </button>
    </div>
</div>
</form>

<div>
    <a asp-action="Index" class="btn button-cancel">
        TERUG NAAR PODCAST OVERZICHT
        <svg class="arrowsSvg-cancel" xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24">
            <path d="M0 0h24v24H0z" fill="none" />
            <path d="M4 18l8.5-6L4 6v12zm9-12v12l8.5-6L13 6z" />
        </svg>
    </a>
</div>

