@model RockstarsIT.Models.Podcast
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<RockstarsIT.Controllers.PodcastController> Localizer

@{
    ViewData["Title"] = "Podcast toevoegen";
}

<h1 class="mt-3">@Localizer["create.pagetitle"]</h1>

<hr />
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row g-3">
        <div class="col-md-6 mb-3">
            <label asp-for="URL" class="control-label">URL</label>
            <input asp-for="URL" class="textbox w-100" placeholder="@Localizer["create.urlexample"] https://open.spotify.com/show/1ijid0felknQbJ3vhGm9Et" />
            <span asp-validation-for="URL" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="Tribe" class="control-label">Tribe</label>
            <select asp-for="TribeId" class="textbox w-100" asp-items="ViewBag.TribeNames"></select>
            <span asp-validation-for="TribeId" class="text-danger"></span>
        </div>
    </div>
    <button class="btn button mr-3" type="submit">
        @Localizer["create.btn.add"]
        <img class="ml-2" height="32" width="32" src="~/icons/checkmark-circle.svg"/>
    </button>
    <div>
        <a asp-action="Index" class="btn button-cancel mt-3">
            @Localizer["create.btn.back"]
            <svg class="arrowsSvg-cancel" xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24">
                <path d="M0 0h24v24H0z" fill="none" />
                <path d="M4 18l8.5-6L4 6v12zm9-12v12l8.5-6L13 6z" />
            </svg>
        </a>
    </div>
</form>