@model RockstarsIT.Models.Podcast

@{
    ViewData["Title"] = "Edit";
}

<h1 lang="nl" class="mt-3">PODCAST BEWERKEN</h1><h1 lang="en-uk" class="mt-3">EDIT PODCAST</h1>

<hr />
<form asp-action="Edit" asp-controller="Podcast" asp-route-id="@Model.PodcastId">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input hidden asp-for="PodcastId" value="@Model.PodcastId"/>
    <div class="row g-3">
        <div class="col-md-6 lg-6 mb-3">
            <label asp-for="URL" class="control-label" lang="nl">Url</label>
            <label asp-for="URL" class="control-label" lang="en-uk">Url</label>
            <input asp-for="URL" class="textbox w-100"/>
            <span asp-validation-for="URL" class="text-danger"></span>
        </div>        
        <div class="col-md-6 mb-3">
            <label asp-for="Title" class="control-label" lang="nl">Titel</label>
            <label asp-for="Title" class="control-label" lang="en-uk">Title</label>
            <input asp-for="Title" class="textbox w-100"/>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="Description" class="control-label" lang="nl">Beschrijving</label>
            <label asp-for="Description" class="control-label" lang="en-uk">Description</label>
            <textarea asp-for="Description" class="textarea w-100" rows="5"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            @using (Html.BeginForm(FormMethod.Post))
            {
                <button class="btn button mr-3 mb-3" type="submit" value="Edit">
                    <a lang="nl">WIJZIGINGEN OPSLAAN</a><a lang="en-uk">SAVE CHANGES</a>
                    <img class="ml-2" height="32" width="32" src="~/icons/save-zwart.svg"/>
                </button>
                @if (@Model.PublishedStatus)
                {
                    <a asp-action="ChangeStatus" asp-route-id="@Model.PodcastId" asp-route-status="false" class="btn button mr-3 mb-3">
                        <label lang="nl" class="text-black">CONCEPT</label><label lang="en-uk" class="text-black">DRAFT</label>
                        <img class="ml-2" height="32" width="32" src="~/icons/x-circle.svg"/>
                    </a>
                }
                else
                {
                    <a asp-action="ChangeStatus" asp-route-id="@Model.PodcastId" asp-route-status="true" class="btn button mr-3 mb-3">
                        <label lang="nl" class="text-black">PUBLICEREN</label><label lang="en-uk" class="text-black">PUBLISH</label>
                        <img class="ml-2" height="32" width="32" src="~/icons/checkmark-circle.svg"/>
                    </a>
                }
                <a onclick="ConfirmDelete(this.name)" href="#" name="@Model.PodcastId" class="btn button-cancel mb-3">
                    <label lang="nl">VERWIJDEREN</label><label lang="en-uk">DELETE</label>
                    <img class="ml-2" height="32" width="32" src="~/icons/bin-wit.svg"/>
                </a>
                <input type="submit" asp-action="Delete" asp-route-id="@Model.PodcastId" hidden id="@Model.PodcastId"/>
            }
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

