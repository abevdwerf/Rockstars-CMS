@model IEnumerable<RockstarsIT.Models.Podcast>

@{
    ViewData["Title"] = "Index";
    Spotify spotify = new Spotify(); 
}

<h1 class="mt-3">PODCASTS</h1> 
<div class="row">
    <div class="col-md-6  text-left">
        <a asp-action="Create" class="btn button">
            NIEUW PODCAST
            <svg class="arrowsSvg" xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24">
                <path d="M0 0h24v24H0z" fill="none" />
                <path d="M4 18l8.5-6L4 6v12zm9-12v12l8.5-6L13 6z" />
            </svg>
        </a>
        <br/>
        <br/>
    </div>
    @if(ViewData["DataShowType"].ToString() == "cards" || ViewData["DataShowType"].ToString() == ""){
     <div class="col-md-6  text-right">
        <a asp-action="Index" asp-route-view ="grid" style="float:right;" class="btn button">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-list-ul" viewBox="0 0 16 16">
              <path fill-rule="evenodd" d="M5 11.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zm-3 1a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm0 4a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm0 4a1 1 0 1 0 0-2 1 1 0 0 0 0 2z"/>
            </svg>
        </a>
        </div>

    }
    else if (ViewData["DataShowType"].ToString() == "grid")
    {
     <div class="col-md-6 text-right">
        <a asp-action="Index" asp-route-view ="cards" style="float:right;" class="btn button">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-grid-3x3-gap-fill" viewBox="0 0 16 16">
                <path d="M1 2a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v2a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2zm5 0a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v2a1 1 0 0 1-1 1H7a1 1 0 0 1-1-1V2zm5 0a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v2a1 1 0 0 1-1 1h-2a1 1 0 0 1-1-1V2zM1 7a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v2a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V7zm5 0a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v2a1 1 0 0 1-1 1H7a1 1 0 0 1-1-1V7zm5 0a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v2a1 1 0 0 1-1 1h-2a1 1 0 0 1-1-1V7zM1 12a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v2a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1v-2zm5 0a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v2a1 1 0 0 1-1 1H7a1 1 0 0 1-1-1v-2zm5 0a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v2a1 1 0 0 1-1 1h-2a1 1 0 0 1-1-1v-2z"/>
            </svg>
        </a>
    </div>
    }
</div>
@if(ViewData["DataShowType"].ToString() == "grid")
{
    <table class="table table-bordered bg-light">
    <thead class="thead-dark">
    <tr>
        <th>
            TITEL
        </th>
        @* <th> *@
        @*     OMSCHRIJVING *@
        @* </th> *@
        @* <th> *@
        @*     URL *@
        @* </th> *@
        <th>
            PREVIEW
        </th>
        <th>
            AUTEUR
        </th>
        <th>
            TRIBE
        </th>
        <th>
            Datum van Publiceren
        </th>
        <th>
            Status
        </th>
        <th>
            Status veranderen
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titel)
            </td>
            @* <td> *@
            @*     @Html.DisplayFor(modelItem => item.Omschrijving) *@
            @* </td> *@
            @* <td> *@
            @*     <a href="@item.URL" target="_blank">Link (nieuw venster)</a> *@
            @* </td> *@
            <td>
                <audio controls>
                    <source src="@spotify.GetPreviewLink(spotify.GetSpotifyLinkId(item.URL))" type="audio/mp3">
                </audio>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Auteur.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tribe.Name)
            </td>
            <td>
                @if(item.PublishedStatus)
                {
                   @Html.DisplayFor(modelItem => item.DatePublished)
                }else{
                    <p class="align-content-center">-----</p>
                }
            </td>
            <td>
                @if(item.PublishedStatus)
                {
                   <p>Gepubliceerd</p> 
                }
                else{
                    <p>Concept</p>
                }
            </td>
            <td>
                @if(item.PublishedStatus)
                {
                    <a asp-action="ChangeStatus" asp-route-id="@item.PodcastId" asp-route-status="false" class="btn btn-danger">Depubliceren</a>
                }
                else{
                    <a asp-action="ChangeStatus" asp-route-id="@item.PodcastId" asp-route-status="true" class="btn btn-success">Publiceren</a>
                }
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.PodcastId" class="btn button mr-2">
                    DETAILS
                    <svg class="arrowsSvg" xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24">
                        <path d="M0 0h24v24H0z" fill="none" />
                        <path d="M4 18l8.5-6L4 6v12zm9-12v12l8.5-6L13 6z" />
                    </svg>
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>
}
else if (ViewData["DataShowType"].ToString() == "cards" || ViewData["DataShowType"].ToString() == "")
{
<div class="row">
@foreach (var item in Model) {
<div class="col-xl-3 col-lg-4 col-md-6 d-flex align-items-stretch  spaceBetweenArticles">
   <div class="card">
       <div class="card-body">
        <audio controls style="width: 250px">
            <source src="@spotify.GetPreviewLink(spotify.GetSpotifyLinkId(item.URL))" type="audio/mp3">
        </audio>
         <h5 class="card-title"> @Html.DisplayFor(modelItem => item.Titel)</h5>
      </div>
      <ul class="list-group list-group-flush">
         <li class="list-group-item"  style="background-color:#FFE000">

            <a asp-action="Details" asp-route-id="@item.PodcastId" class="card-link btn button-white">
               LEZEN
               <svg class="arrowsSvg" xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24">
                  <path d="M0 0h24v24H0z" fill="none" />
                  <path d="M4 18l8.5-6L4 6v12zm9-12v12l8.5-6L13 6z" />
               </svg>
            </a>
         </li>
      </ul>
   </div>
</div>
}
</div>
}

