@model RockstarsIT.Models.Video

@{
    ViewData["Title"] = "Details";
}

<h1 class="mt-3">VIDEO DETAILS</h1>

<div>
    <h4>Video</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2" lang="nl">
            Titel:
        </dt>
        <dt class="col-sm-2" lang="en-uk">
            Title:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2" lang="nl">
            Beschrijving:
        </dt>
        <dt class="col-sm-2" lang="en-uk">
            Description:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Video:
        </dt>
        <dd class="col-sm-10">
            @if (Model.Link.Length == 11)
            {
                <iframe width="420" height="315" src="https://www.youtube.com/embed/@Html.DisplayFor(model => model.Link)"></iframe>
            }
            else if (Model.Link.Length == 9)
            {
                <iframe width="420" height="315" src="https://player.vimeo.com/video/@Html.DisplayFor(model => model.Link)"></iframe>
            }
        </dd>
        <dt class="col-sm-2">
            Tribe:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tribe.Name)
        </dd>
        <dt class="col-sm-2">
            Rockstar:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rockstar.Name)
        </dd>
        <dt>
            Thumbnail:
        </dt>
        <dd>
            @if (Model.Link.Length == 11)
            {
                <img width="420" height="315" src="https://img.youtube.com/vi/@Html.DisplayFor(model => model.Link)/0.jpg">
            }
            else if (Model.Link.Length == 9)
            {
                <img width="420" height="315" id="vimeoimg" name="@Html.DisplayFor(model => model.Link)">
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.VideoId" class="btn button">
        CONTENT BEWERKEN
        <svg class="arrowsSvg" xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24">
            <path d="M0 0h24v24H0z" fill="none" />
            <path d="M4 18l8.5-6L4 6v12zm9-12v12l8.5-6L13 6z" />
        </svg>
    </a>
    @using (Html.BeginForm(FormMethod.Post))
    {
        <a onclick="ConfirmDelete(this.name)" href="#" name="@Model.VideoId" class="btn button-cancel">
            VERWIJDEREN
            <svg class="arrowsSvg-cancel" xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24">
                <path d="M0 0h24v24H0z" fill="none" />
                <path d="M4 18l8.5-6L4 6v12zm9-12v12l8.5-6L13 6z" />
            </svg>
        </a>
        <input type="submit" asp-action="Delete" asp-route-id="@Model.VideoId" hidden id="@Model.VideoId" />
    }
    <a asp-action="Index" class="btn button-cancel ml-3">
        TERUG NAAR OVERZICHT
        <svg class="arrowsSvg-cancel" xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24">
            <path d="M0 0h24v24H0z" fill="none" />
            <path d="M4 18l8.5-6L4 6v12zm9-12v12l8.5-6L13 6z" />
        </svg>
    </a>
    @if (@Model.PublishedStatus)
    {
        <a asp-action="ChangeStatus" asp-route-id="@Model.VideoId" asp-route-status="false" class="btn button">
            Depubliceren
            <svg class="arrowsSvg" xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24">
                <path d="M0 0h24v24H0z" fill="none" />
                <path d="M4 18l8.5-6L4 6v12zm9-12v12l8.5-6L13 6z" />
            </svg>
        </a>
    }
    else
    {
        <a asp-action="ChangeStatus" asp-route-id="@Model.VideoId" asp-route-status="true" class="btn button">
            Publiceren
            <svg class="arrowsSvg" xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24">
                <path d="M0 0h24v24H0z" fill="none" />
                <path d="M4 18l8.5-6L4 6v12zm9-12v12l8.5-6L13 6z" />
            </svg>
        </a>
    }
</div>

<script>
window.onload = CheckLink
    function CheckLink () {
        if (document.getElementById("vimeoimg").name == @Html.DisplayFor(model => model.Link))
        {
            document.getElementById("vimeoimg").src = ("https://vumbnail.com/" + "@Html.DisplayFor(model => model.Link)" + ".jpg");
        }
    }


    function ConfirmDelete(id) {
        const conbtn2 = document.getElementById(id);

        let text = "Weet je zeker dat u deze podcast wilt verwijderen?"
        if (confirm(text) == true) {
            conbtn2.click();
        }
        else {
            console.log("test");
        }
    }
</script>