@model RockstarsIT.Models.PodcastEpisode

@{
    ViewData["Title"] = "Podcast toevoegen";
}

<h1 class="mt-3">PODCAST EPISODE TOEVOEGEN</h1>

<hr />
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row g-3">
        <div class="col-md-6 mb-3">
            <label asp-for="URL" class="control-label">URL</label>
            <input asp-for="URL" class="form-control" placeholder="Bijvoorbeld: https://open.spotify.com/episode/7d9QeMg8T5XY5y85gyp0wb" />
            <span asp-validation-for="URL" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="Podcast" class="control-label">Podcast</label>
            <select asp-for="PodcastId" class ="form-control" asp-items="ViewBag.PodcastTitles"></select>
            <span asp-validation-for="PodcastId" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="Rockstar" class="control-label">Rockstar</label>
            <select asp-for="RockstarId" class ="form-control" asp-items="ViewBag.RockstarNames"></select>
            <span asp-validation-for="RockstarId" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="Tribe" class="control-label">Tribe</label>
            <select asp-for="TribeId" class ="form-control" asp-items="ViewBag.TribeNames"></select>
            <span asp-validation-for="TribeId" class="text-danger"></span>
        </div>
    </div>
    <button class="btn button mr-3" type="submit">
        PODCAST EPISODE TOEVOEGEN
        <img class="ml-2" height="32" width="32" src="~/icons/checkmark-circle.svg"/> 
    </button>
    <div>
        <a asp-action="Index" class="btn button-cancel mt-3">
            TERUG NAAR PODCAST EPISODE OVERZICHT
            <svg class="arrowsSvg-cancel" xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24">
                <path d="M0 0h24v24H0z" fill="none" />
                <path d="M4 18l8.5-6L4 6v12zm9-12v12l8.5-6L13 6z" />
            </svg>
        </a>
    </div>
</form>