@model RockstarsIT.Models.Article

@{
    ViewData["Title"] = "Edit";
}

<h1>ARTIKEL BEWERKEN</h1>

<hr />
<form asp-action="Edit" enctype="multipart/form-data" id="friendform">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ArticleId" />
    <div class="row g-3">
        <div class="col-md-6 mb-3">
            <label asp-for="Title" class="control-label">Titel</label>
            <input asp-for="Title" id="txtTitel" class="textbox w-100" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label class="control-label">Auteur</label>
            <select asp-for="RockstarId" class="form-control" asp-items="ViewBag.RockstarNames"></select>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="Description" class="control-label">Beschrijving</label>
            <input asp-for="Description" class="textbox w-100" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label">Teksten</label>
        <div class="article-text-container">
            <ul class="nav nav-tabs" id="tab-list" role="tablist">
              <li class="nav-item">
                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">1</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">2 <button class="close" type="button" title="Remove this page">×</button></a>
              </li>
              <li class="nav-item">
                <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">3<button class="close" type="button" title="Remove this page">×</button></a>
              </li>
              <li class="nav-item" id="last-child">
                <a class="nav-link" id="add-tab" data-toggle="tab" role="tab">
                    Toevoegen
                </a>
              </li>
            </ul>
            <div class="tab-content" id="myTabContent">
              <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab"><textarea asp-for="Description" class="textarea w-100" rows="5"></textarea></div>
              <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab"><textarea asp-for="Description" class="textarea w-100" rows="5"></textarea></div>
              <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab"><textarea asp-for="Description" class="textarea w-100" rows="5"></textarea></div>
            </div>
            <button class="btn button">Opslaan</button> 
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Images" class="control-label">Afbeeldingen</label>
        <div class="row">
            <div class="col-md-5">
                <div class="custom-file upload__box">
                    <input asp-for="Images" class="custom-file-input upload__inputfile" multiple id="customFile">
                    <label asp-for="Images" class="custom-file-label" for="customFile" data-browse="Bestand kiezen"></label>
                    <span asp-validation-for="Images" class="text-danger"></span>
                </div>
            </div>
      
            <div class="col-md-2">
                <input type="button" value="UPLOAD" id="upload" class="btn button" />
            </div>
        </div>
        
    </div>
    <div class="form-group">
        <div id="wrap" class="upload__img-wrap row flex-nowrap overflow-auto">
            @if (Model.ArticleImages != null)
            {
                @foreach (var item in Model.ArticleImages) {
                    <div class="upload__img-box col-3">
                        <div style="background-image: url(@item.URL);" class="img-bg">
                            <div id="delete" data-id="@item.ArticleImageId" class="upload__img-close">
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
    <div class="form-group">
        <button type="submit" value="Save" class="btn button">
            WIJZIGINGEN OPSLAAN
            <svg class="arrowsSvg" xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24">
                <path d="M0 0h24v24H0z" fill="none" />
                <path d="M4 18l8.5-6L4 6v12zm9-12v12l8.5-6L13 6z" />
            </svg>
        </button>
    </div>
</form>

<br>
<div>
    <a asp-action="Index" class="btn button-cancel">
        TERUG NAAR OVERZICHT
        <svg class="arrowsSvg-cancel" xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24">
            <path d="M0 0h24v24H0z" fill="none" />
            <path d="M4 18l8.5-6L4 6v12zm9-12v12l8.5-6L13 6z" />
        </svg>
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $('#customFile').on('change',
            function(e) {
                //get the file name
                var fileName = e.target.files[0].name;
                //replace the "Choose a file" label
                $(this).next('.custom-file-label').html(fileName);
                document.getElementById("upload").focus()
            });

        jQuery(document).ready(function () {

            var tabID = $("#tab-list li").length;
            $('#add-tab').click(function () {
                var html = '<li class="nav-item"><a class="nav-link" id="test-tab" data-toggle="tab" href="#test" role="tab" aria-controls="test" aria-selected="false">' + tabID + '<button class="close" type="button" title="Remove this page">×</button></a></li>';
                $('#last-child').before(html);
                tabID++;
            });

            $('#tab-list').on('click','.close',function(){
                var tabID = $(this).parents('a').attr('href');
                $(this).parents('li').remove();
                $(tabID).remove();

                //display first tab
                var tabFirst = $('#tab-list a:first');
                tabFirst.tab('show');                
            });

            $("#upload").click(function (e) {   
                if (window.FormData !== undefined) {  
  
                    var fileUpload = $("#customFile").get(0);  
                    var files = fileUpload.files;  
              
                    // Create FormData object  
                    var data = new FormData();  
  
                    // Looping over all files and add it to FormData object  
                    for (var i = 0; i < files.length; i++) {  
                        data.append('Images', files[i]);  
                    }  
              
                    // Adding articleId to FormData object  
                    data.append('ArticleId', $("#ArticleId").val());  
  
                    $.ajax({  
                        async: true,
                        type: "POST",
                        dataType: "json",
                        url: "/Article/UploadImage",  
                        data: data,
                        contentType: false, // Not to set any content header  
                        processData: false, // Not to process data  
                        success: function (response) {  
                            if (response.Success) {

                                alert(response.Message);
                                //show image
                                for (const element of response.ArticleImages) {
                                    var html = "<div class='upload__img-box col-3'><div style='background-image: url(" + element.Item2 + ")' class='img-bg'><div id='delete' data-id='" + element.Item1 + "' class='upload__img-close'></div></div></div>";
                                    $('#wrap').append(html);
                                }
                            }
                        },  
                        error: function (response) { 
                            alert("failed to upload image");  
                        }  
                    });  
                } else {  
                    alert("FormData is not supported.");  
                }  
            });   

          //delete image
          $(document).on("click", ".upload__img-close", function (e) {

            var currentDiv = $(this);
            // Create FormData object  
            var data = new FormData();  
              
            // Adding articleId to FormData object  
            data.append('ArticleImageId', $(this).data("id"));

            $.ajax({  
                async: true,
                type: "POST",
                dataType: "json",
                url: "/Article/DeleteImage",  
                data: data,
                contentType: false, // Not to set any content header  
                processData: false, // Not to process data  
                success: function (response) {  
                    if (response.Success) {
                        alert(response.Message);
                        //delete div
                        currentDiv.closest(".upload__img-box").remove();
                    }
                },  
                error: function (response) {  
                    alert("failed to delete image");  
                }  
            });  
            
          });
        });
    </script>
}
