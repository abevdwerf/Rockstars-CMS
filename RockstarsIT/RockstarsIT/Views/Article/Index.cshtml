@model IEnumerable<RockstarsIT.Models.Article>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row">
@foreach (var item in Model) {
  <div class="col-sm-6 spaceBetweenArticles">
    <div class="card">
     <img class="card-img-top" src="..." alt="Card image cap">
      <div class="card-body">
          <h5 class="card-title"> @Html.DisplayFor(modelItem => item.Title)</h5>
           <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
      </div>
      <ul class="list-group list-group-flush">
            <li class="list-group-item"  style="background-color:#FFE000">Author: @Html.DisplayFor(modelItem => item.Author)</li>
          </ul> 
            <div class="card-body" style="background-color:#232323">
            <a  asp-action="Details" asp-route-id="@item.ArticleId" class="card-link btn btn-primary">Read more</a>
            <a asp-action="Edit" asp-route-id="@item.ArticleId" class="card-link btn btn-warning">Edit</a>
            <a asp-action="Delete" asp-route-id="@item.ArticleId" class="card-link  btn btn-danger">Delete</a>
          </div>
    </div>
   </div>
}
</div>
